{{ header }}
{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<div class="input-group">
					<div class="input-group-addon">
						{{ entry_active_store }}
						<select name="store" id="input-store" class="form-select">
							{% for store in stores %}&nbsp;&nbsp;
							<option value="{{ store.href }}" {% if store.store_id == store_id %} selected{% endif %}>{{ store.name }}</option>
							{% endfor %}
						</select>
					</div>
					<button type="button" id="run-queue" data-toggle="tooltip" title="{{ button_run_queue }}" class="btn btn-success"><i class="fa fa-play"></i> {{ button_run_queue }}</button>
					<button type="submit" form="form-feed" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
					<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
				</div>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-feed" class="form-horizontal">

          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
            <li><a href="#tab-queue" data-toggle="tab">{{ tab_queue }}</a></li>
            <li><a href="#tab-log" data-toggle="tab">{{ tab_log }}</a></li>
            <li><a href="#tab-support" data-toggle="tab">{{ tab_help_and_support }}</a></li>
          </ul>

          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">

							<div class="form-group">
								<label for="input-status" class="col-sm-2 control-label">{{ entry_status }}</label>
								<div class="col-sm-10">
									<select name="feed_ps_indexnow_status" id="input-status" class="form-control">
										{% if feed_ps_indexnow_status %}
										<option value="1" selected="selected">{{ text_enabled }}</option>
										<option value="0">{{ text_disabled }}</option>
										{% else %}
										<option value="1">{{ text_enabled }}</option>
										<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>

							<fieldset style="padding: 1em; margin-bottom: 1em;">
								<legend>{{ heading_services }}</legend>

								{% for indexnow_service in indexnow_services %}
								<div class="form-group">
									<label for="input-service-status-{{ indexnow_service.service_id }}" class="col-sm-2 control-label">{{ indexnow_service.service_name }}</label>
									<div class="col-sm-10">
										<select name="feed_ps_indexnow_service_status[{{ indexnow_service.service_id }}]" id="input-service-status-{{ indexnow_service.service_id }}" data-controls="tab-link-service-{{ indexnow_service.service_id }}" class="form-control">
											{% if feed_ps_indexnow_service_status[indexnow_service.service_id] %}
											<option value="1" selected="selected">{{ text_enabled }}</option>
											<option value="0">{{ text_disabled }}</option>
											{% else %}
											<option value="1">{{ text_enabled }}</option>
											<option value="0" selected="selected">{{ text_disabled }}</option>
											{% endif %}
										</select>
									</div>
								</div>
								{% endfor %}

							</fieldset>

							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_notify_search_engines }}</label>
								<div class="col-sm-10">
									<div class="well well-sm" style="height: 150px; overflow: auto;">
										{% for key, value in content_categories %}
										<div class="checkbox">
											<label>
												{% if key in feed_ps_indexnow_content_category %}
												<input type="checkbox" name="feed_ps_indexnow_content_category[]" value="{{ key }}" checked="checked" />
												{{ value }}
												{% else %}
												<input type="checkbox" name="feed_ps_indexnow_content_category[]" value="{{ key }}" />
												{{ value }}
												{% endif %}
											</label>
										</div>
										{% endfor %}
									</div>
								</div>
							</div>

							<div class="form-group">
								<label for="input-service-key" class="col-sm-2 control-label">{{ entry_service_key }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<input type="text" name="feed_ps_indexnow_service_key" value="{{ feed_ps_indexnow_service_key }}" placeholder="{{ entry_service_key }}" id="input-service-key" class="form-control" readonly>
										<span class="input-group-btn">
											<button type="button" class="btn btn-success btn-generate-service-key" data-toggle="tooltip" title="{{ button_change_key }}"><i class="fa fa-refresh"></i> {{ button_change_key }}</button>
										</span>
									</div>
									{% if error_service_key %}<div class="text-danger">{{ error_service_key }}</div>{% endif %}
									<div class="help-block text-muted">{{ help_service_key }}</div>
								</div>
							</div>

							<div class="form-group">
								<label for="input-service-key-location" class="col-sm-2 control-label">{{ entry_service_key_location }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<input type="text" name="feed_ps_indexnow_service_key_location" value="{{ feed_ps_indexnow_service_key_location }}" data-service-key-url="{{ feed_ps_indexnow_service_key_url }}" placeholder="{{ entry_service_key_location }}" id="input-service-key-location" class="form-control" readonly>
										<span class="input-group-btn">
											<button type="button" class="btn btn-warning btn-open-service-key" data-toggle="tooltip" title="{{ button_check_key }}"><i class="fa fa-key"></i> {{ button_check_key }}</button>
										</span>
									</div>
									<div class="help-block text-muted">{{ help_service_key_location }}</div>
								</div>
							</div>

            </div>
            <div class="tab-pane" id="tab-queue">

							<div id="queue-content"></div>

						</div>
            <div class="tab-pane" id="tab-log">

							<div id="log-content"></div>

						</div>
            <div class="tab-pane" id="tab-support">

							<h3>{{ heading_getting_started }}</h3>
							{{ text_getting_started }}
							<hr>
							<h3>{{ heading_setup }}</h3>
							{{ text_setup }}
							<hr>
							<h3>{{ heading_troubleshot }}</h3>
							{{ text_troubleshot }}
							<hr>
							<h3>{{ heading_faq }}</h3>
							{{ text_faq }}
							<hr>
							<h3>{{ heading_contact }}</h3>
							{{ text_contact }}

            </div>
					</div>

					<input type="hidden" name="store_id" value="{{ store_id }}">
        </form>
      </div>
    </div>
  </div>
</div>
<script>
	$('.btn-generate-service-key').on('click', function () {
		var node = this;

		$.ajax({
			url: 'index.php?route=extension/feed/ps_indexnow/generate_service_key&store_id={{ store_id }}&user_token={{ user_token }}',
			dataType: 'json',
			beforeSend: function() {
				$(node).button('loading');
			},
			complete: function() {
				$(node).button('reset');
			},
			success: function(json) {
				$('.alert-dismissible').remove();

				// Check for errors
				if (json['error']) {
					$('#content > .container-fluid').prepend('<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> ' + json['error'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
				}

				if (json['success']) {
					$('#content > .container-fluid').prepend('<div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> ' + json['success'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');

					$('#input-service-key').val(json['service_key']);
					$('#input-service-key-location').val(json['service_key_location']).attr('data-service-key-url', json['service_key_url']);
				}
			},
			error: function(xhr, ajaxOptions, thrownError) {
				alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
			}
		});
	});

	$('.btn-open-service-key').on('click', function () {
		var serviceKeyUrl = $('#input-service-key-location').data('service-key-url');

		if (serviceKeyUrl.length) {
				window.open(serviceKeyUrl, '_blank');
		}
	});

	$('#input-store').on('change', function () {
		window.location = $(this).val();
	});

	$('#queue-content').load('index.php?route=extension/feed/ps_indexnow/queue&store_id={{ store_id }}&user_token={{ user_token }}');

	$('#queue-content').delegate('.pagination a', 'click', function(e) {
		e.preventDefault();

		$('#queue-content').load(this.href);
	});

	$('#queue-content').delegate('.btn-danger', 'click', function() {
		var node = this;

		$.ajax({
			url: 'index.php?route=extension/feed/ps_indexnow/remove_queue&store_id={{ store_id }}&user_token={{ user_token }}',
			type: 'post',
			data: 'store_id=' + $('input[name=\'store_id\']').val() + '&queue_id=' + encodeURIComponent(this.value),
			dataType: 'json',
			crossDomain: true,
			beforeSend: function() {
				$(node).button('loading');
			},
			complete: function() {
				$(node).button('reset');
			},
			success: function(json) {
				$('.alert-dismissible').remove();

				// Check for errors
				if (json['error']) {
					$('#content > .container-fluid').prepend('<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> ' + json['error'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
				}

				if (json['success']) {
					$('#content > .container-fluid').prepend('<div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> ' + json['success'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');

					$('#queue-content').load('index.php?route=extension/feed/ps_indexnow/queue&store_id={{ store_id }}&user_token={{ user_token }}');
				}
			},
			error: function(xhr, ajaxOptions, thrownError) {
				alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
			}
		});
	});

	$('#log-content').load('index.php?route=extension/feed/ps_indexnow/log&store_id={{ store_id }}&user_token={{ user_token }}');

	$('#log-content').delegate('.pagination a', 'click', function(e) {
		e.preventDefault();

		$('#log-content').load(this.href);
	});
</script>
{{ footer }}
